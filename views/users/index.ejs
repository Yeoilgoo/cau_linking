<!DOCTYPE html>
<html>

<head>
  <% include ../partials/head %>
  <% include ../users/tags %>
</head>

<body>
  <% include ../partials/nav %>

    <div class="container user user-index">

      <div class="contentBox">
        <h3 class="contentBoxTop">Users</h3>
        <ul class="floats">
          <% if(users == null || users.length == 0){ %>
            <div class="noData" colspan=100> There is no user yet.</div>
            <% } %>
              <div class="row ">
                <% users.forEach(function(user) { %>
                  <div class="col s12 m6">
                    <div class="card white">
                      <div class="card-content">
                        <span class="card-title"><a href="/users/<%= user.username %>"><%= user.username %></a><br />
              <p><%= Math.floor(user.Sid / 10000) %>학번 흑우입니다.</p>
              <p><%= user.email %></p>
              </div>
              <div class="card-action">
                <div>
                  <input name="tags" id="readOnlyTags" value="<%= user.tags %>">
                </div>
              </div>
          </div>
        </div>

          <% }) %>
        </ul>
      </div>

    </div> <!-- container end -->
  </body>
</html>
